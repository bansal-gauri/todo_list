<%- include("header.ejs") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% items.forEach((item) => { %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" value="<%=item.id%>" name="cbox" onchange="this.form.submit()"/>
        <p><%= item.name %></p>
      </div>
      <input type="hidden" name="listTitle" value="<%=listTitle%>"></input>
    </form>
  <% }); %>

  <form class="item" action="/" method="POST">
    <input
      placeholder="New Item"
      type="text"
      name="newItem"
      id=""
      autocomplete="off"
    />
    <button type="submit" name="button" value=<%=listTitle%>>+</button>
  </form>
</div>

<%- include("footer.ejs") -%>
